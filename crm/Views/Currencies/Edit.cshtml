@model crm.Models.Currency

@{
    ViewData["Title"] = "Edit";
}

<h1>Edycja waluty @Model.Name</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-row">
                <div class="form-group col-md-3">
                    <label asp-for="Symbol" class="control-label"></label>

                    <span asp-validation-for="Symbol" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <input asp-for="Symbol" class="form-control" readonly />
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-3">
                    <label asp-for="Name" class="control-label"></label>
                    <span asp-validation-for="Name" class="text-danger"></span>

                </div>
                <div class="form-group col-md-6">
                    <input asp-for="Name" class="form-control" />
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-3">
                    <label asp-for="Rate" class="control-label"></label>
                    <span asp-validation-for="Rate" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <input asp-for="Rate" class="form-control" />
                </div>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Is_Sync" /> Czy synchronizować?
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Ghosted" /> Czy jest deazktywowana?
                </label>
            </div>
            <div class="form-row">
                <div class="form-group col-md-3">
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-success" />
                    </div>
                </div>
                <div class="form-group col-md-6">
                    <a asp-action="Index"><button type="button" class="btn btn-primary">Cofnij do listy</button></a>
                </div>

            </div>
</form>
    </div>
</div>

<div>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
