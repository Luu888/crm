@model crm.Models.Currency

@{
    ViewData["Title"] = "Create";
}

<h1>Tworzenie Nowej Waluty</h1>

<h4>Waluty</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Symbol" class="control-label"></label>
                <input asp-for="Symbol" class="form-control" />
                <span asp-validation-for="Symbol" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <!---<input class="form-check-input" asp-for="Is_Sync" /> @Html.DisplayNameFor(model => model.Is_Sync)-->
                    <input class="form-check-input" asp-for="Is_Sync" /> Czy synchronizować?
                </label>
            </div>
            <div class="form-row">
                <div class="form-group col-md-3">
                    <input type="submit" value="SAVE" class="btn btn-success" />
                </div>
                <div class="form-group col-md-6">
                    <a asp-action="Index"><button type="button" class="btn btn-primary">Cofnij do listy</button></a>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
